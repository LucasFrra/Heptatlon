<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="client.controller.ClientDetailsController" alignment="center" spacing="10" stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button text="Retour" onAction="#goToAdmin" />


    <Label fx:id="clientNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <Label text="Factures" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <ListView fx:id="factureListView"/>
    <Text style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-fill: white;" text="Double-cliquez sur une facture pour visualiser le ticket de caisse"/>
</VBox>
