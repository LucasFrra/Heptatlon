<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:controller="client.controller.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="21" left="20"/>
    </padding>

    <Label text="Client ID:"/>
    <TextField fx:id="clientIdField" GridPane.columnIndex="1"/>

    <Label text="Magasin ID:" GridPane.rowIndex="1"/>
    <TextField fx:id="magasinIdField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Commencer Transaction" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#handleStartTransaction"/>
    <Label fx:id="transactionLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Article Réf:" GridPane.rowIndex="3"/>
    <TextField fx:id="articleRefField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Quantité:" GridPane.rowIndex="4"/>
    <TextField fx:id="quantiteField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="Acheter Article" GridPane.rowIndex="5" GridPane.columnIndex="0" onAction="#handleBuyArticle"/>
    <Label fx:id="achatStatusLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Consulter Facture" GridPane.rowIndex="6" GridPane.columnIndex="0" onAction="#handleConsultFacture"/>
    <Label fx:id="factureLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Date (YYYY-MM-DD):" GridPane.rowIndex="7"/>
    <TextField fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Button text="Calculer Chiffre d'Affaire" GridPane.rowIndex="8" GridPane.columnIndex="0" onAction="#handleCalculateRevenue"/>
    <Label fx:id="revenueLabel" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>